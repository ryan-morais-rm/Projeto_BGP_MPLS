# Configuração de interface e IP

hostname PE-AS40
!
int lo0
ip add 1.1.40.1 255.255.255.255
no shut
!
int ethernet0/0
ip add 10.0.24.2 255.255.255.252
no shut
!
int ethernet 0/1
ip add 10.0.34.2 255.255.255.252
no shut
!
int ethernet 0/2
ip add 10.0.24.6 255.255.255.252
no shut
!
int ethernet 0/3
ip add 200.40.0.1 255.255.255.252
no shut


# Configuração do Peering BGP AS 40
en 
conf t
ip route 1.1.20.1 255.255.255.255 ethernet 0/0
ip route 1.1.20.1 255.255.255.255 ethernet 0/2
router bgp 40
neighbor 10.0.24.1 remote-as 20
neighbor 10.0.24.1 update-source Loopback0
neighbor 10.0.24.1 ttl-security hops 2
neighbor 10.0.24.5 remote-as 20
neighbor 10.0.24.5 update-source Loopback0
neighbor 10.0.24.5 ttl-security hops 2
neighbor 10.0.12.1 remote-as 10
neighbor 10.0.13.1 remote-as 10
neighbor 10.0.34.1 remote-as 30