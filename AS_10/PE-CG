# Configuração de interface e IP

hostname PE-CG
!
int lo0
ip add 1.1.10.3 255.255.255.255
no shut
!
int ethernet0/0
ip add 10.64.12.1 255.255.255.252
no shut
!
int ethernet 0/1
ip add 10.64.11.2 255.255.255.252
no shut
!
int ethernet 0/2
no shut
!
int ethernet0/2.101
encapsulation dot1Q 101
ip add 10.64.13.1 255.255.255.252
no shut
!
int ethernet0/2.10
encapsulation dot1Q 10
ip add 200.10.1.1 255.255.255.0
no shut
